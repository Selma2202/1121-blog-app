html
	head
		title= "Blog - Login"
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		link(type="text/css" rel="stylesheet" href="materialize-css/dist/css/materialize.min.css"  media="screen,projection")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='main.css')
	body
		nav
			.nav-wrapper
				a.brand-logo(href='/') MoodMeddling
				a.button-collapse(href='#', data-activates='mobile-nav')
					i.material-icons menu
				ul#nav-mobile.right.hide-on-med-and-down
					li
						a(href='/') About
					li
						a(href='register') Register
				ul#mobile-nav.side-nav
					li
						a(href='/') About
					li
						a(href='register') Register

		div
			div#header.row.z-depth-2
				div#headerleft.valign-wrapper.col.s12
					div.container
						h1.valign.center Welcome!
						
			div.row
				div(class='col s1 m1 l3')
					p  
				div(class='col s10 m10 l6 z-depth-2' id='formsection')
					h2 Login
					a(href="register") Not a member yet? Register here.
					br
					table(class="formtable")
							form(method='post', action= '/')
								//-input(type='hidden', name='_method', value='PUT')
								tr
									td
										label Your e-mail: 
									td
										input(name='email', type='email', id='email', placeholder = 'Your e-mail', autocomplete='off' required)
								tr
									td
										label Your password: 
									td
										input(name='password', type='password', id='password', placeholder = 'Your password' required)
								tr
									td
										input(type='Submit', value='Submit', class='button')
					br
					h5= message	
					br
				div(class='col s1 m1 l3')
					p  

			div.row#postrow
				div(class='col l1')
					p 
				div(class='col l10')
					p
				div(class='col l1')
					p

		script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js")
		script(type="text/javascript" src="materialize-css/dist/js/materialize.min.js")
		script(type="text/javascript" src="main.js")