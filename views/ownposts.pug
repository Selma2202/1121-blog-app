html
	head
		title= "Blog - Own Posts"
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		link(type="text/css" rel="stylesheet" href="materialize-css/dist/css/materialize.min.css"  media="screen,projection")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='main.css')

	body
		div
			div#header.row.valign-wrapper
				div#headerleft.col.l8.valign
					h1 MoodMeddling
				div#headermiddle.col.l3.valign
					h3 Hi #{currentUser.firstName}! 
					a(href="ownposts") Profile
					br
					a(href="allposts") Feelings
					br
					a(href="ownposts") About
					br
					a(href="logout") Logout
					br
				div#headerright.col.l1
					p
			div.row
				div(class='col l3')
					p  
				div(class='col l6' id='formsection')
					h2 Sharing is caring!
					form(method='post', action= '/ownposts')
						 
						div( class='input-field')
							select(name='title', id='title' class='validate')
								option(value="" disabled selected) How do you feel?
								option(value='Happy') Happy
								option(value='Excited') Excited
								option(value='Scared') Scared
								option(value='Sad') Sad
								option(value='Angry') Angry
								option(value='Anxious') Anxious
							//- label Your mood:

						div( class='input-field')
							input(name='body', type='text', id='body', class='validate' required)
							label And why?

						input(type='Submit', value='Share your feelings', class='button')
				div(class='col l3')
					p  

			div.row#postrow
				div(class='col l1')
					p 
				div(class='col l10')
					br
					each thing in data.reverse()
						//- Is the reverse working????
						div#postcontent
							h5#showTitle You were feeling: 
							h3 #{thing.title}
							//- STILL TO GO FROM USER ID TO USER
							h4#showBody #{thing.body}
							//- a(href="viewsinglepost") View this post (postId = #{thing.id})
							//- leuke gedachte 1 "meesturen van postId in de data"--> a(href="viewsinglepost?id=" + encodeURIComponent( postId ) ) View this post
							br
							p #{thing.updatedAt}
							a(href="viewsinglepost?id=" + thing.id ) Reflections: #{thing.comments.length}
							//- a(href="viewsinglepost?id=" + thing.id ) Reflections: #{thing.comments.length}
						br
						br
				div(class='col l1')
					p

		script(type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js")
		script(type="text/javascript" src="materialize-css/dist/js/materialize.min.js")
		script(type="text/javascript" src="main.js")