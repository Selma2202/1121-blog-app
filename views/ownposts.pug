html
	head
		title= "Blog - Own Posts"
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		link(type="text/css" rel="stylesheet" href="materialize-css/dist/css/materialize.min.css"  media="screen,projection")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='main.css')
	body
		div
			h1 Hi #{currentUser.firstName}! 
			a(href="allposts") Go to all posts
			br
			a(href="logout") Logout
			br
			h2 Feel like sharing your mood?
			table(class="formtable")
				form(method='post', action= '/ownposts')
					tr
						td
							label Your mood: 
						td
							input(name='title', type='text', id='title', placeholder = 'Your mood' required)
					tr
						td
							label Your message to the world: 
						td
							input(name='body', type='text', id='body', placeholder = 'Share your thoughts!' required)
					tr
						td
							input(type='Submit', value='Submit', class='button')
			br
			h2 These are your previous posts
			each thing in data.reverse()
				h3#showTitle #{thing.title}
				h4#showUser Posted by me
				//- STILL TO GO FROM USER ID TO USER
				p#showBody #{thing.body}
				br
