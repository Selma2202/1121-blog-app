html
	head
		title= "Blog - Register"
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		link(type="text/css" rel="stylesheet" href="materialize-css/dist/css/materialize.min.css"  media="screen,projection")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='main.css')
	body
		div
			h1 Register
			a(href="/") Already a member? Login.
			br
			br
			table(class="formtable")
					form(method='post', action= '/register')
						//-input(type='hidden', name='_method', value='PUT')
						tr
							td
								label Your first name: 
							td
								input(name='firstName', type='text', id='firstName', placeholder = 'Your first name' required)
						tr
							td
								label Your e-mail: 
							td
								input(name='email', type='email', id='email', placeholder = 'Your e-mail' required)
						tr
							td
								label Your password: 
							td
								input(name='password', type='password', id='password', placeholder = 'Your password' required)
						tr
							td
								input(type='Submit', value='Submit', class='button')
			br
			h2#error-message= message
