html
	head
		title= "Blog - View One Posts"
		link(href="http://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
		link(type="text/css" rel="stylesheet" href="materialize-css/dist/css/materialize.min.css"  media="screen,projection")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel='stylesheet', href='main.css')
	body
		div
			h1 Hi #{currentUser.firstName}! 
			a(href="allposts") Go to all posts
			br
			a(href="ownposts") Go to your own posts
			br
			a(href="logout") Logout
			br
			br
			h2 View this one specific post
			//- h3= message
			br
			if ( data[0].comments.length == 0) 
				h2 HERE SHOULD BE THE POST
				h3 #{data[0].title}
				p #{data[0].body}
				p #{data[0].firstName}
				br
				h3 No comments yet. Be the first!
				form(method='post', action= '/viewsinglepost?id=' + data[0].id)
					input(name='comment', type='text', id='comment', placeholder = 'comment' required)
					input(type='Submit', value='Comment', class='button')
			else 
				h2 HERE SHOULD BE THE POST
				h3 #{data[0].title}
				p #{data[0].body}
				p #{data[0].firstName}
				br
				h3 Comments:
				each thing in data[0].comments
					//- Hier moet nog de post zelf komen
					//- Hier moet nog de gebruiker van de post komen
					p #{thing.comment} ~ by #{thing.userId}
						//- dit moeten alleen de comments zijn die bij een bepaalde post horen (ID)
					
				form(method='post', action= '/viewsinglepost?id=' + data[0].id)
					input(name='comment', type='text', id='comment', placeholder = 'comment' required)
					input(type='Submit', value='Comment', class='button')
